# alias================================
alias ls="ls -a"
alias ll='ls -alF'
alias cls='clear'
alias slp="systemctl suspend"


case ${OSTYPE} in
  darwin*)
    alias v="$LOCAL_BIN/nvim-macos/bin/nvim"
    alias nvim="$LOCAL_BIN/nvim-macos/bin/nvim"
    ;;
  linux*)
    alias v="$LOCAL_BIN/nvim.appimage"
    alias nvim="$LOCAL_BIN/nvim.appimage"
    ;;
esac

alias prp="pipenv run python"
